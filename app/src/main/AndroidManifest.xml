<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.openkratio.colibribook"
    android:versionCode="10"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="false"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".InitActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:logo="@drawable/ic_logo_64"
            android:label="">
        </activity>
        <activity
            android:name=".ContactDetailsActivity"
            android:icon="@drawable/ic_ab_icon" >
        </activity>
        <activity
            android:name=".Preferences"
            android:icon="@drawable/ic_ab_icon" >
        </activity>
        <activity
            android:name=".AboutActivity"
            android:icon="@drawable/ic_ab_icon" >
        </activity>

        <provider
            android:name=".persistence.ContactsContentProvider"
            android:authorities="@string/contacts_content_provider_path"
            android:exported="false"
            android:multiprocess="true" >
        </provider>
    </application>

</manifest>