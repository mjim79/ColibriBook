<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.openkratio.colibribook"
    android:versionCode="20"
    android:versionName="2.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".InitActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".ContactDetailsActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".AboutActivity" />

        <provider
            android:name=".persistence.ContactsContentProvider"
            android:authorities="@string/contacts_content_provider_path"
            android:exported="false"
            android:multiprocess="true"></provider>
    </application>

</manifest>