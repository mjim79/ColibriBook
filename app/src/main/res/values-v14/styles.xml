<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->

    <style name="SplashscreenTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Colibri</item>
    </style>

    <!-- Main activity theme. -->
    <style name="ColibriTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Colibri.NoTitle</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_green</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar.Solid.Colibri"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Colibri.NoTitle" parent="@style/ActionBar.Solid.Colibri">
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:logo">@drawable/ic_launcher</item>
    </style>

</resources>